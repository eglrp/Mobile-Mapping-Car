<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="groupone.itiprj.com.e15.grp12.mapp" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="groupone.itiprj.com.e15.grp12.mapp.StartScreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="sensorLandscape"
            android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="groupone.itiprj.com.e15.grp12.mapp.ConnectScreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_connect_screen"
            android:screenOrientation="sensorLandscape"
            android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen" />
        <activity
            android:name="groupone.itiprj.com.e15.grp12.mapp.LiveVideoScreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_live_video_screen"
            android:screenOrientation="sensorLandscape"
            android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen" />
        <activity
            android:name="groupone.itiprj.com.e15.grp12.mapp.MapList"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_map_list"
            android:screenOrientation="sensorLandscape"
            android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen" />
        <activity
            android:name="groupone.itiprj.com.e15.grp12.mapp.AboutActivity"
            android:label="@string/title_activity_about"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="sensorLandscape"
            android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen"/>

        <service
            android:name="groupone.itiprj.com.e15.grp12.mapp.ArduinoConnection"
            android:enabled="true" />
        <service
            android:name="groupone.itiprj.com.e15.grp12.mapp.DrawingService"
            android:enabled="true"
            android:exported="true" />
    </application>

</manifest>
